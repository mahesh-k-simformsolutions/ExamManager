<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Exam Management System</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    <RadzenIcon Icon="dashboard" /> <span>&nbsp;Dashboard</span>
                </NavLink>
            </div>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <RadzenIcon Icon="home" /> <span>&nbsp;Home</span>
            </NavLink>
        </div>
        <AuthorizeView Roles="Student">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="myexams">
                    <RadzenIcon Icon="assignment" /> <span>&nbsp;My Exams</span>
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Teacher,Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="exams">
                    <RadzenIcon Icon="assignment" /> <span>&nbsp;Exams</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="questions">
                    <RadzenIcon Icon="help_outline" /> <span>&nbsp;Questions</span>
                </NavLink>
            </div
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="results">
                    <RadzenIcon Icon="list" /> <span>&nbsp;Results</span>
                </NavLink>
            </div>
        </AuthorizeView>
         <AuthorizeView Roles="Student">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="myscorecard">
                    <RadzenIcon Icon="assignment_turned_in" /> <span>&nbsp;Scorecard</span>
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
